<div class="mb-8">
  <div class="flex items-center justify-between mb-6">
    <div class="flex flex-col gap-1">
      <h1 class="font-custom text-4xl font-bold text-gray-600">Dynamic Pricing Dashboard</h1>
      <h3 class="text-gray-400"><%= @company.name %></h3>
    </div>
    <%= link_to "Integration Settings", admin_integration_setting_path(dri: @dri), class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md" %>
  </div>

  <!-- Navigation Cards -->
  <div class="grid grid-cols-2 gap-6 mb-8">
    <!-- Customer Type Transactions Card -->
    <%= link_to admin_transactions_path(dri: @dri), class: "block" do %>
      <div class="bg-white rounded-lg border-2 border-gray-200 hover:border-blue-400 hover:shadow-lg transition-all p-6">
        <div class="flex items-start justify-between mb-4">
          <div>
            <h2 class="text-xl font-bold text-gray-800 mb-1">Customer Type Transactions</h2>
            <p class="text-sm text-gray-500">Track preferred and retail customer type changes</p>
          </div>
          <svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>

        <div class="grid grid-cols-2 gap-3">
          <div class="bg-green-50 rounded p-3">
            <div class="text-xs text-green-700 mb-1">Preferred</div>
            <div class="text-2xl font-bold text-green-900"><%= @stats[:total_preferred] %></div>
          </div>
          <div class="bg-orange-50 rounded p-3">
            <div class="text-xs text-orange-700 mb-1">Retail</div>
            <div class="text-2xl font-bold text-orange-900"><%= @stats[:total_retail] %></div>
          </div>
        </div>

        <div class="mt-4 flex items-center text-blue-600 text-sm font-medium">
          View All Transactions
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
      </div>
    <% end %>

    <!-- Cart Pricing Events Card -->
    <%= link_to admin_cart_pricing_events_path(dri: @dri), class: "block" do %>
      <div class="bg-white rounded-lg border-2 border-gray-200 hover:border-purple-400 hover:shadow-lg transition-all p-6">
        <div class="flex items-start justify-between mb-4">
          <div>
            <h2 class="text-xl font-bold text-gray-800 mb-1">Cart Preferred Pricing</h2>
            <p class="text-sm text-gray-500">Monitor preferred pricing applications to carts</p>
          </div>
          <svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>

        <div class="grid grid-cols-2 gap-3">
          <div class="bg-purple-50 rounded p-3">
            <div class="text-xs text-purple-700 mb-1">Preferred Applied</div>
            <div class="text-2xl font-bold text-purple-900"><%= @stats[:preferred_pricing_applied] %></div>
          </div>
          <div class="bg-gray-50 rounded p-3">
            <div class="text-xs text-gray-500 mb-1">Total Events</div>
            <div class="text-2xl font-bold text-gray-900"><%= @stats[:total_cart_events] %></div>
          </div>
        </div>

        <div class="mt-4 flex items-center text-purple-600 text-sm font-medium">
          View All Cart Events
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
      </div>
    <% end %>
  </div>
</div>
