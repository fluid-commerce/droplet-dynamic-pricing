<div class="max-w-2xl mx-auto py-6">
  <h1 class="text-2xl font-semibold mb-4">Edit Customer</h1>

  <% if flash[:notice].present? %>
    <div class="mb-4 rounded border border-green-200 bg-green-50 p-3 text-green-800"><%= flash[:notice] %></div>
  <% end %>
  <% if flash[:alert].present? %>
    <div class="mb-4 rounded border border-red-200 bg-red-50 p-3 text-red-800"><%= flash[:alert] %></div>
  <% end %>

  <%= form_with url: customer_path(@customer_id), method: :put, scope: :customer, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :customer_type, "Customer type", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :customer_type, options_for_select(@price_types, @selected_customer_type), {}, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="flex space-x-2">
      <%= f.submit "Save", class: "px-4 py-2 bg-blue-600 text-white rounded" %>
      <%= link_to "Cancel", customers_path, class: "px-4 py-2 bg-gray-200 rounded" %>
    </div>
  <% end %>
</div>
