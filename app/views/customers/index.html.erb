<div class="max-w-7xl mx-auto py-6">
  <h1 class="text-2xl font-semibold mb-4">Customers</h1>

  <div class="overflow-x-auto bg-white shadow rounded">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Full name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Active</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer type</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @customers.each do |customer| %>
          <% metadata = customer["metadata"] || {} %>
          <% customer_type = metadata["customer_type"] || metadata.dig("metadata", "customer_type") %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap"><%= customer["full_name"] %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= customer["active"] ? "Yes" : "No" %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= customer_type %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to "Edit", edit_customer_path(customer["id"], customer_type: customer_type), class: "text-blue-600 hover:text-blue-800" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @meta.present? %>
    <div class="mt-4 flex items-center justify-between">
      <div>
        <span class="text-sm text-gray-600">
          Page <%= @meta["current_page"] %> of <%= @meta["total_pages"] %>
        </span>
      </div>
      <div class="space-x-2">
        <% current_page = (@meta["current_page"] || 1).to_i %>
        <% total_pages = (@meta["total_pages"] || 1).to_i %>

        <% if current_page > 1 %>
          <%= link_to "Previous", customers_path(page: current_page - 1, per_page: params[:per_page]), class: "px-4 py-2 bg-gray-200 rounded" %>
        <% end %>

        <% if current_page < total_pages %>
          <%= link_to "Next", customers_path(page: current_page + 1, per_page: params[:per_page]), class: "px-4 py-2 bg-gray-200 rounded" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
